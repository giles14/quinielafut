{% extends "layout.twig" %}
{% block title  %} Quiniela Fut - Equipos {% endblock %}

{% block sectionTitle %}
    Equipo
{% endblock %}
{% block messages %}
    {% if successMessages %}
     <div class="alert alert-success alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                  <h5><i class="icon fas fa-check"></i> Realizado</h5>
                    {{ successMessages }}
     </div>
     {% endif %}
     {% if errorMessages %}
     <div class="alert alert-danger alert-dismissible">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                  <h5><i class="icon fas fa-ban"></i> Error!</h5>
                  {{ errorMessages }}
                  {# Los datos proporcionados no pasaron la validación intenta nuevamente con datos válidos. #}
                </div>
     {% endif %}
{% endblock %}
{% block mainContent %}
<div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Agregar</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="" role="form" method="post" enctype="multipart/form-data" >
                <div class="card-body">
                  <div class="form-group">
                    <label for="nameEquipo">Nombre de Equipo</label>
                    <input type="text" class="form-control" id="nameEquipo" name="equipo" value="{{equipos.equipo}}" placeholder="">
                    <label for="umberChampionships">Nombre de Equipo</label>
                    <input type="text" class="form-control" id="numberChampionships" name="campeonatos" value="{{equipos.campeonatos}}" placeholder="">
                    <input type="file" name="logo" value="{{equipos.equipo}}">
                  </div>
                </div>
                
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
              </form>
            </div>
{% endblock %}